<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Title">
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="Filter">
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/margin_1x</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="Title.Desc">
        <item name="android:fontFamily">@font/roboto_slab_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="circular">
        <item name="cornerSizeTopLeft">@dimen/margin_medium</item>
        <item name="cornerSizeBottomLeft">@dimen/margin_medium</item>


    </style>


</resources>